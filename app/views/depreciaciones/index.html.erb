<div class="contenedorFondoFichaGenerica">
  <div class="opcionesArribaFichaGenerica">
      <h5><strong> Ficha equipo: <%= " "+@equipo.tipoEquipo %>  <%= " "+ @equipo.marca%> </strong></h5> 
      
  </div>
  <div class="contenedorLinkSuperioresMasContenidoFichaGenerica">

    <!--LinksSuperioresEmpleado--> 
    <div class="linksSuperioresFichaGenerica"> 
        <ul class=" listaLinksFichaGenerica">
          <li class="elementoListaLinksFichaGenerica">
              <%=link_to("Principal",user_campo_equipo_path(current_user,@campo,@equipo), :method => "get", class: "linkFichaGenerica ")%>
          </li>
          <li class="elementoListaLinksFichaGenerica">
            <%=link_to("DepreciaciÃ³n",user_campo_equipo_depreciaciones_path(current_user,@campo, @equipo), :method => "get", class: "linkFichaGenerica linkSeleccionadoFichaGenerica")%>
