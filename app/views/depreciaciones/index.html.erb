        </ul>
    </div><!--fin LinksSuperioresEmpleado-->


    <div class="FichaGenerica">
      <div class="contenedorMiniListaContenida"></div>
        <table class="table table-striped table-bordered tablaPagos ">
          <thead>
            <tr class="filaSuperiorMiniListaContenida">
              <th class="tituloColumnaMiniListaContenida columnaInformacionMiniListaContenidaCuatroPorFila" >Fecha</th>
              <th class="tituloColumnaMiniListaContenida columnaInformacionMiniListaContenidaCuatroPorFila" >Valor depreciado</th>
              <th class="tituloColumnaMiniListaContenida columnaInformacionMiniListaContenidaCuatroPorFila" >Depreciacion acumulada</th>
              <th class="tituloColumnaMiniListaContenida columnaInformacionMiniListaContenidaCuatroPorFila">Valor libro</th>
              <th class="tituloColumnaBotonMiniListaContenida columnaImagenesDerechaMiniListaContenida" > <%=link_to(button_tag("+ Depreciar", class: "btn botonNaranjo botonAgregarPago " ),new_user_campo_equipo_depreciacione_path(current_user,@campo, @equipo), method: :get )%></th>
            </tr>
          </thead>  
          <tbody>
            
            <% @adentroTablaDepreciaciones = true %>
            <%=render partial: "depreciacione", collection: @depreciaciones, locals: {campo: @campo, equipo: @equipo }%>
            <% @adentroTablaDepreciaciones = false %>
            
          </tbody>
        </table>
      </div><!--fin contenedorMiniListaContenida-->
    </div><!--fin FichaEmpleado-->
