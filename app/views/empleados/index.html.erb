
<div class="contenedorFondoListaGrande">

  <div class="barraArribaListaGrande">
    <div id="">
      <h5><strong> Personal campo: <%=@campo.nombre%></strong></h5> 
      
    </div>
    <div class="botonesBarraArribaListaGrande">
          <!-- filtro por tipo de contrato-->
          <div id="vinetaSeleccionarAnoIndexElementosContables"><%= "Tipo contratos: "%>
          </div>
            <div>
                  <select class="custom-select" id="selectAnoContabilidadEERR" data-userid="<%=current_user.id%>" data-campoid="<%=@campo.id%>">
                        <% @ano = Time.now.year + 1%>
                        <%until @ano == 2014 do%>
                        <!-- verificamos si es el a単o actual para seleccioanrlo -->
                        <% if @ano == Time.now.year%>
                        <option selected="selected"><%=@ano%></option>
                        <%end %>
                        <!-- verificamos si es el a単o actual para no seleccioanrlo -->
                        <%if @ano != Time.now.year%>
                        <option><%=@ano%></option>
                        <%end%>
                        <% @ano = @ano -1%>
                        <%end%>
                  </select>     
            </div>
            <!-- filtro por contrato vigente-->
            <div id="vinetaSeleccionarAnoIndexElementosContables"><%= "Estado contratos: "%>
            </div>
            <div>
                  <select class="custom-select" id="selectAnoContabilidadEERR" data-userid="<%=current_user.id%>" data-campoid="<%=@campo.id%>">
                        <% @ano = Time.now.year + 1%>
                        <%until @ano == 2014 do%>
                        <!-- verificamos si es el a単o actual para seleccioanrlo -->
                        <% if @ano == Time.now.year%>
                        <option selected="selected"><%=@ano%></option>
                        <%end %>
                        <!-- verificamos si es el a単o actual para no seleccioanrlo -->
                        <%if @ano != Time.now.year%>
                        <option><%=@ano%></option>
                        <%end%>
                        <% @ano = @ano -1%>
                        <%end%>
                  </select>     
            </div>
          
              <%=link_to(button_tag("+ Personal", class: "btn botonNaranjo botonBarraArribaListaGrande" ),new_user_campo_empleado_path(current_user,@campo), method: :get  )%>

    </div>
  </div>
 
  <div class="listaGrande">
    <table class="table table-striped  table-bordered">
      <thead>
        <tr class="filaSuperiorListaGrande">
          <th class="tituloColumnaListaGrande" scope="col">Nombre</th>
          <th class="tituloColumnaListaGrande" scope="col">Contacto</th>
          <th class="tituloColumnaListaGrande" scope="col">Cargo</th>
          <th class="tituloColumnaListaGrande" scope="col">Sueldo base</th>
          <th class="tituloColumnaListaGrande" scope="col">Tipo contrato</th>
          <th scope="col"></th>
        </tr>
      </thead>  
      <tbody>
          <% @adentroTablaEmpleado = true %>
          <%=render partial: "empleado", collection: @empleados, locals: {campo: @campo}%>
          <% @adentroTablaEmpleado = false %>
      </tbody>
    </table>
  </div>

</div><!--fin contenedorFondoIndexEmpleados-->

  
